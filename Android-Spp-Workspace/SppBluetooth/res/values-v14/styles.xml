<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="titleStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="Widget.Styled.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
     <item name="android:background">@color/black</item>
     <item name="android:gravity">center_vertical</item>
     <item name="android:titleTextStyle">@style/titleStyle</item>
    </style>
    
   <style name="AppBaseTheme_ActionBar" parent="android:Theme.Holo.Light.DarkActionBar">
      	<item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>   	
        <!-- API 14 theme customizations can go here. -->
    </style>
</resources>
